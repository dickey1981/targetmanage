<!-- 语音提示弹窗组件 -->
<view class="modal-mask" wx:if="{{show}}" bindtap="onMaskTap">
  <view class="modal-container" catchtap="onContainerTap">
    <view class="modal-header">
      <text class="modal-title">{{title}}</text>
      <view class="modal-close" bindtap="onClose">×</view>
    </view>
    
    <view class="modal-content">
      <!-- 识别内容部分 -->
      <view class="content-section">
        <view class="section-label">识别内容：</view>
        <view class="section-content">{{voiceText}}</view>
      </view>
      
      <!-- 改进建议部分 -->
      <view class="content-section" wx:if="{{suggestions.length > 0}}">
        <view class="section-label">建议改进：</view>
        <view class="suggestions-list">
          <view class="suggestion-item" wx:for="{{suggestions}}" wx:key="index">
            {{index + 1}}. {{item}}
          </view>
        </view>
      </view>
    </view>
    
    <view class="modal-footer">
      <button class="btn-cancel" bindtap="onCancel">{{cancelText}}</button>
      <button class="btn-confirm" bindtap="onConfirm">{{confirmText}}</button>
    </view>
  </view>
</view>
