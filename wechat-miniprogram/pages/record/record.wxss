/* pages/record/record.wxss */
.container {
  min-height: 100vh;
  background: #ffffff;
  padding: 0;
}

/* 顶部标题 */
.header {
  background: #ffffff;
  padding: 40rpx 30rpx;
  color: #333;
  text-align: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
  color: #333;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  opacity: 0.7;
  color: #666;
}

/* 记录类型选择 */
.record-types {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  padding: 30rpx;
  background: white;
  margin: 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.record-type-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 20rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.record-type-item:active {
  transform: scale(0.95);
  background: #e9ecef;
}

.type-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.type-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 最近记录 */
.recent-records {
  margin: 0 20rpx 20rpx;
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-more {
  font-size: 26rpx;
  color: #00B4D8;
  font-weight: 500;
}

.records-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.record-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  transition: all 0.2s ease;
}

.record-item:active {
  background: #e9ecef;
}

.record-icon {
  margin-right: 20rpx;
}

.record-icon .icon {
  font-size: 40rpx;
}

.record-content {
  flex: 1;
}

.record-text {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.record-time {
  font-size: 24rpx;
  color: #999;
}

.record-arrow {
  color: #ccc;
  font-size: 32rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
  color: #999;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  margin-bottom: 16rpx;
}

.empty-hint {
  display: block;
  font-size: 26rpx;
  opacity: 0.8;
}

/* 未登录提示 */
.login-tip {
  text-align: center;
  padding: 40rpx;
  color: #999;
}

.tip-text {
  font-size: 28rpx;
}

/* 记录模态框 */
.record-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.record-modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  width: 80%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.2);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  cursor: pointer;
}

.modal-body {
  padding: 30rpx;
}

/* 语音记录 - 新样式 */
.voice-record {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}

.voice-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 40rpx;
}

.voice-circle-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.voice-circle {
  width: 240rpx;
  height: 240rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
  position: relative;
  z-index: 2;
}

.voice-circle.recording {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  transform: scale(1.1);
  box-shadow: 0 12rpx 48rpx rgba(245, 87, 108, 0.5);
}

.microphone-icon {
  font-size: 80rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.2));
}

/* 波纹动画 */
.wave-animation {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 240rpx;
  height: 240rpx;
  z-index: 1;
}

.wave {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 4rpx solid rgba(245, 87, 108, 0.6);
  animation: wave-expand 2s ease-out infinite;
}

.wave:nth-child(2) {
  animation-delay: 0.6s;
}

.wave:nth-child(3) {
  animation-delay: 1.2s;
}

@keyframes wave-expand {
  0% {
    transform: scale(1);
    opacity: 1;
  }
  100% {
    transform: scale(2);
    opacity: 0;
  }
}

.voice-status {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.status-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  letter-spacing: 1rpx;
}

.hint-text {
  font-size: 26rpx;
  color: #999;
  letter-spacing: 0.5rpx;
}

/* 拍照记录 */
.photo-record {
  text-align: center;
}

.photo-btn {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: #28a745;
  border: none;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: white;
  transition: all 0.3s ease;
}

.photo-btn:active {
  transform: scale(0.95);
}

.photo-icon {
  font-size: 60rpx;
  margin-bottom: 16rpx;
}

.photo-text {
  font-size: 24rpx;
  font-weight: bold;
}

/* 文字记录 */
.text-record {
  display: flex;
  flex-direction: column;
}

.text-input {
  width: 100%;
  height: 200rpx;
  border: 2rpx solid #eee;
  border-radius: 16rpx;
  padding: 20rpx;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  resize: none;
  box-sizing: border-box;
}

.text-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.text-hint {
  font-size: 24rpx;
  color: #999;
}

.submit-btn {
  background: linear-gradient(135deg, #00B4D8 0%, #0096C7 100%);
  color: white;
  border: none;
  border-radius: 16rpx;
  height: 60rpx;
  padding: 0 30rpx;
  font-size: 26rpx;
  font-weight: bold;
  transition: all 0.3s ease;
}

.submit-btn:active {
  transform: scale(0.95);
}

.submit-btn.submitting {
  background: #ccc;
  color: #999;
}

.submit-btn[disabled] {
  background: #ccc;
  color: #999;
}

/* 目标选择样式 */
.goal-selection {
  margin-bottom: 20rpx;
}

.goal-selection-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 15rpx;
  display: block;
}

.goal-list {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  max-height: 200rpx;
  overflow-y: auto;
}

.goal-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 20rpx;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.goal-item.selected {
  background: #e3f2fd;
  border-color: #00B4D8;
}

.goal-item:active {
  transform: scale(0.98);
}

.goal-title {
  font-size: 26rpx;
  color: #333;
  flex: 1;
}

.goal-progress {
  font-size: 24rpx;
  color: #00B4D8;
  font-weight: bold;
}



