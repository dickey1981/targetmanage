/* pages/record/record.wxss */
.container {
  min-height: 100vh;
  background: #ffffff;
  padding: 0;
}

/* 顶部标题 */
.header {
  background: #ffffff;
  padding: 40rpx 30rpx;
  color: #333;
  text-align: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
  color: #333;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  opacity: 0.7;
  color: #666;
}

/* 记录类型选择 */
.record-types {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 30rpx;
  background: white;
  margin: 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.record-type-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 20rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.record-type-item:active {
  transform: scale(0.95);
  background: #e9ecef;
}

.type-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.type-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 最近记录 */
.recent-records {
  margin: 0 20rpx 20rpx;
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-more {
  font-size: 26rpx;
  color: #00B4D8;
  font-weight: 500;
}

.records-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.record-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  transition: all 0.2s ease;
}

.record-item:active {
  background: #e9ecef;
}

.record-icon {
  margin-right: 20rpx;
}

.record-icon .icon {
  font-size: 40rpx;
}

.record-content {
  flex: 1;
}

.record-text {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.record-time {
  font-size: 24rpx;
  color: #999;
}

.record-arrow {
  color: #ccc;
  font-size: 32rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
  color: #999;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  margin-bottom: 16rpx;
}

.empty-hint {
  display: block;
  font-size: 26rpx;
  opacity: 0.8;
}

/* 未登录提示 */
.login-tip {
  text-align: center;
  padding: 40rpx;
  color: #999;
}

.tip-text {
  font-size: 28rpx;
}

/* 记录模态框 */
.record-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.record-modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  width: 80%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.2);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  cursor: pointer;
}

.modal-body {
  padding: 30rpx;
}

/* 语音记录 */
.voice-record {
  text-align: center;
}

.voice-button-container {
  margin-bottom: 20rpx;
}

.voice-button {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #00B4D8 0%, #0096C7 100%);
  border: none;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: white;
  transition: all 0.3s ease;
}

.voice-button.recording {
  background: #dc3545;
  transform: scale(1.1);
}

.voice-icon {
  font-size: 60rpx;
  margin-bottom: 16rpx;
}

.voice-text {
  text-align: center;
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.voice-text .main-text {
  display: block;
  font-size: 28rpx;
  color: #ffffff;
  font-weight: 500;
  margin-bottom: 6rpx;
  line-height: 1.2;
}

.voice-text .sub-text {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.2;
}

/* 拍照记录 */
.photo-record {
  text-align: center;
}

.photo-btn {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: #28a745;
  border: none;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: white;
  transition: all 0.3s ease;
}

.photo-btn:active {
  transform: scale(0.95);
}

.photo-icon {
  font-size: 60rpx;
  margin-bottom: 16rpx;
}

.photo-text {
  font-size: 24rpx;
  font-weight: bold;
}

/* 文字记录 */
.text-record {
  display: flex;
  flex-direction: column;
}

.text-input {
  width: 100%;
  height: 200rpx;
  border: 2rpx solid #eee;
  border-radius: 16rpx;
  padding: 20rpx;
  font-size: 28rpx;
  margin-bottom: 16rpx;
  resize: none;
}

.text-hint {
  font-size: 24rpx;
  color: #999;
  text-align: right;
}

/* 手动录入 */
.manual-record {
  display: flex;
  flex-direction: column;
}

.manual-input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #eee;
  border-radius: 16rpx;
  padding: 20rpx;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.submit-btn {
  background: linear-gradient(135deg, #00B4D8 0%, #0096C7 100%);
  color: white;
  border: none;
  border-radius: 16rpx;
  height: 80rpx;
  font-size: 28rpx;
  font-weight: bold;
}
