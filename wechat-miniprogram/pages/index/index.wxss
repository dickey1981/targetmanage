/* pages/index/index.wxss */

.index-container {
  min-height: 100vh;
  background: #f8f9fa;
  padding-bottom: 40rpx;
}

/* 顶部欢迎区域 */
.welcome-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 40rpx 40rpx;
  color: white;
}

.welcome-text {
  margin-bottom: 20rpx;
}

.greeting {
  font-size: 32rpx;
  opacity: 0.9;
  margin-right: 20rpx;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
}

.date-info {
  display: flex;
  align-items: center;
}

.current-date {
  font-size: 28rpx;
  opacity: 0.8;
  margin-right: 20rpx;
}

.week-day {
  font-size: 24rpx;
  opacity: 0.7;
  background: rgba(255, 255, 255, 0.2);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

/* 语音交互区域 */
.voice-section {
  margin: -20rpx 40rpx 40rpx;
  text-align: center;
}

.voice-button-container {
  margin-bottom: 30rpx;
}

.voice-button {
  width: 320rpx;
  height: 320rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border: none;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 20rpx 40rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
  position: relative;
}

.voice-button.recording {
  background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
  transform: scale(1.1);
  box-shadow: 0 25rpx 50rpx rgba(17, 153, 142, 0.4);
}

.voice-icon {
  margin-bottom: 20rpx;
}

.mic-icon {
  width: 80rpx;
  height: 80rpx;
}

.voice-text {
  font-size: 32rpx;
  font-weight: 600;
  color: white;
  margin-bottom: 10rpx;
}

.voice-hint {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  text-align: center;
}

/* 录音状态指示器 */
.recording-indicator {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20rpx;
}

.wave-container {
  display: flex;
  align-items: flex-end;
  height: 60rpx;
  margin-bottom: 20rpx;
}

.wave-bar {
  width: 8rpx;
  background: #667eea;
  margin: 0 4rpx;
  border-radius: 4rpx;
  animation: wave 0.6s ease-in-out infinite;
}

.wave-bar:nth-child(odd) {
  animation-delay: 0.1s;
}

.wave-bar:nth-child(even) {
  animation-delay: 0.2s;
}

@keyframes wave {
  0%, 100% { height: 20rpx; }
  50% { height: 60rpx; }
}

.recording-time {
  font-size: 24rpx;
  color: #667eea;
  font-weight: 500;
}

/* 今日目标概览 */
.goals-overview {
  margin: 0 40rpx 40rpx;
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.section-subtitle {
  font-size: 24rpx;
  color: #999;
}

.goals-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.goal-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  transition: all 0.2s ease;
}

.goal-item:active {
  background: #e9ecef;
  transform: scale(0.98);
}

.goal-info {
  flex: 1;
  margin-right: 20rpx;
}

.goal-title {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.goal-category {
  font-size: 22rpx;
  color: #667eea;
  background: rgba(102, 126, 234, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.goal-progress {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 20rpx;
}

.progress-bar {
  width: 80rpx;
  height: 8rpx;
  background: #e9ecef;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 8rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 20rpx;
  color: #667eea;
  font-weight: 600;
}

.goal-status {
  text-align: center;
}

.status-text {
  font-size: 22rpx;
  color: #28a745;
  background: rgba(40, 167, 69, 0.1);
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
}

.status-text.urgent {
  color: #dc3545;
  background: rgba(220, 53, 69, 0.1);
}

/* 空状态 */
.empty-goals {
  text-align: center;
  padding: 60rpx 20rpx;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  display: block;
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.create-goal-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 25rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: 500;
}

/* 快速操作区域 */
.quick-actions {
  display: flex;
  justify-content: space-around;
  margin: 0 40rpx 40rpx;
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 0.2s ease;
}

.action-item:active {
  transform: scale(0.95);
}

.action-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 16rpx;
}

.action-text {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

/* 最近记录 */
.recent-records {
  margin: 0 40rpx 40rpx;
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.records-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.record-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  transition: all 0.2s ease;
}

.record-item:active {
  background: #e9ecef;
}

.record-icon {
  margin-right: 20rpx;
}

.record-icon .icon {
  width: 40rpx;
  height: 40rpx;
}

.record-content {
  flex: 1;
}

.record-text {
  display: block;
  font-size: 26rpx;
  color: #333;
  margin-bottom: 6rpx;
}

.record-time {
  font-size: 22rpx;
  color: #999;
}

.record-arrow {
  margin-left: 20rpx;
}

.record-arrow .arrow {
  width: 24rpx;
  height: 24rpx;
}

/* 底部提示 */
.bottom-tips {
  text-align: center;
  margin-top: 40rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #999;
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .welcome-section {
    padding: 50rpx 30rpx 30rpx;
  }
  
  .voice-section {
    margin: -20rpx 30rpx 30rpx;
  }
  
  .goals-overview,
  .quick-actions,
  .recent-records {
    margin: 0 30rpx 30rpx;
    padding: 30rpx;
  }
  
  .voice-button {
    width: 280rpx;
    height: 280rpx;
  }
}
