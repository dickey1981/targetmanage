/* 首页样式 - 严格按照图片设计 */
.container {
  height: 100vh;
  background: #ffffff;
  padding: 40rpx 30rpx 0;
  overflow: hidden;
}

/* 今日目标区域 */
.today-goals-section {
  margin-bottom: 40rpx;
  max-height: 200rpx;
  display: flex;
  flex-direction: column;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 12rpx;
  display: block;
}

.goals-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 10rpx;
  flex: 1;
}

.goal-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 16rpx;
  position: relative;
  transition: all 0.3s ease;
  border: none;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-height: 96rpx;
}

.goal-card:active {
  transform: scale(0.98);
  background: #e9ecef;
}

.goal-status-icon {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
}

.status-icon {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ffffff;
}

.status-icon.completed {
  background: #007bff;
}

.status-icon.pending {
  background: #e9ecef;
}

.status-symbol {
  font-size: 20rpx;
  font-weight: bold;
  color: #ffffff;
}

.goal-content {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  flex: 1;
}

.goal-progress-section {
  display: flex;
  align-items: center;
  margin-top: 16rpx;
}

.goal-text-section {
  display: flex;
  flex-direction: column;
  margin-left: 12rpx;
}

.progress-ring {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  border: 5rpx solid #e9ecef;
  border-top: 5rpx solid #4CAF50;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  flex-shrink: 0;
  transform: rotate(calc(var(--progress) * 3.6deg - 90deg));
}

.progress-ring::before {
  content: '';
  position: absolute;
  width: 46rpx;
  height: 46rpx;
  border-radius: 50%;
  background: #ffffff;
}

.goal-percentage {
  font-size: 24rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 4rpx;
}

.goal-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  text-align: left;
  line-height: 1.2;
  margin-bottom: 8rpx;
}

.goal-status-text {
  font-size: 20rpx;
  text-align: left;
  font-weight: 400;
  color: #666;
}

.goal-status-text.completed {
  color: #28a745;
}

.goal-status-text.pending {
  color: #6c757d;
}

.empty-goals {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 20rpx;
  text-align: center;
  grid-column: 1 / -1;
}

.empty-text {
  font-size: 36rpx;
  color: #666;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.empty-hint {
  font-size: 28rpx;
  color: #999;
  line-height: 1.4;
}

/* 核心操作区域 */
.core-actions-section {
  margin-top: 260rpx;
  margin-bottom: 40rpx;
}

.core-actions-title {
  margin-top: 50rpx;
}

.core-actions {
  display: flex;
  justify-content: space-around;
  gap: 30rpx;
  margin-top: 30rpx;
}

.core-action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.action-icon {
  width: 150rpx;
  height: 150rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
  background: #f8f9fa;
  border: 1rpx solid #e9ecef;
}

.action-icon:active {
  transform: scale(0.95);
  background: #e9ecef;
}

.action-symbol {
  width: 120rpx;
  height: 120rpx;
  display: block;
}

.action-text {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
  text-align: center;
}

/* 语音输入区域 */
.voice-input-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: fixed;
  bottom: 20rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 100%;
  padding: 0 30rpx;
  z-index: 100;
}

.voice-icon-container {
  margin-bottom: 20rpx;
  position: relative;
}

.voice-icon {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  display: block;
}

.voice-icon.recording {
  transform: scale(1.1);
  animation: voice-pulse 1s infinite;
}

@keyframes voice-pulse {
  0% {
    transform: scale(1.1);
    opacity: 1;
  }
  50% {
    transform: scale(1.3);
    opacity: 0.7;
  }
  100% {
    transform: scale(1.1);
    opacity: 1;
  }
}

.pulse-ring {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 160rpx;
  height: 160rpx;
  border: 2rpx solid #007bff;
  border-radius: 50%;
  transform: translate(-50%, -50%);
  animation: pulse-ring 2s infinite;
}

.pulse-ring.delay-1 {
  animation-delay: 0.5s;
}

.pulse-ring.delay-2 {
  animation-delay: 1s;
}

@keyframes pulse-ring {
  0% {
    transform: translate(-50%, -50%) scale(1);
    opacity: 1;
  }
  100% {
    transform: translate(-50%, -50%) scale(1.5);
    opacity: 0;
  }
}

.voice-button {
  width: 600rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
  position: relative;
  overflow: hidden;
}

.voice-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s;
}

.voice-button:active::before {
  left: 100%;
}

.voice-button.recording {
  background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
  box-shadow: 0 8rpx 24rpx rgba(0, 123, 255, 0.4);
  transform: scale(1.02);
}

.voice-button:active {
  transform: scale(0.95);
}

.voice-button-text {
  font-size: 36rpx;
  color: #ffffff;
  font-weight: 600;
}

/* 创建目标弹窗样式 */
.create-goal-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.create-goal-modal .modal-content {
  width: 600rpx;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 40rpx;
}

.create-goal-modal .modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.create-goal-modal .modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.create-goal-modal .close-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #f5f5f5;
  color: #666;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
}

.create-goal-modal .voice-section {
  display: flex;
  justify-content: center;
  margin-bottom: 40rpx;
}

.create-goal-modal .voice-button {
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
  background: #f8f9fa;
  border: 3rpx solid #e9ecef;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.create-goal-modal .voice-button.recording {
  background: #007bff;
  border-color: #007bff;
  transform: scale(1.05);
}

.create-goal-modal .voice-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.create-goal-modal .main-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
}

.create-goal-modal .voice-button.recording .main-text {
  color: #ffffff;
}

.create-goal-modal .sub-text {
  font-size: 24rpx;
  color: #666;
}

.create-goal-modal .voice-button.recording .sub-text {
  color: #ffffff;
}

.create-goal-modal .voice-tip {
  text-align: center;
}

.create-goal-modal .tip-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  display: block;
  margin-bottom: 10rpx;
}

/* 语音识别结果弹窗样式 */
