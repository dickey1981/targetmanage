.voice-action-buttons {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.action-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  border: none;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.create-goal-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
}

.create-record-btn {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: #ffffff;
}

.action-btn:active {
  transform: scale(0.95);
}

.btn-icon {
  font-size: 32rpx;
}

.btn-text {
  font-size: 28rpx;
}

/* 重新录音按钮 */
.retry-section {
  text-align: center;
}

.retry-btn {
  background: transparent;
  border: 2rpx solid #e9ecef;
  color: #666;
  padding: 16rpx 32rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
}

.retry-btn:active {
  background: #f8f9fa;
}

