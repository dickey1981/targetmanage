/* Home page styles */
.container {
  min-height: 100vh;
  background: #ffffff;
  padding: 0;
  display: flex;
  flex-direction: column;
}

.header-section {
  height: 20vh;
  background: #ffffff;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.user-greeting {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.greeting-text {
  margin-bottom: 20rpx;
}

.greeting {
  font-size: 32rpx;
  color: #666;
  margin-right: 10rpx;
}

.username {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.today-overview {
  display: flex;
  gap: 30rpx;
}

.overview-item {
  font-size: 28rpx;
  color: #666;
  background: #f8f9fa;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

/* 核心交互区 - 语音按钮 (35%屏幕高度) */
.voice-interaction-section {
  height: 35vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fafbfc;
}

.voice-button-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.voice-button {
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #00B4D8 0%, #0077B6 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 180, 216, 0.3);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.voice-button.recording {
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E53 100%);
  transform: scale(1.1);
  box-shadow: 0 12rpx 40rpx rgba(255, 107, 107, 0.4);
}

.voice-button.recording::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 100%;
  height: 100%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.2) 0%, transparent 70%);
  transform: translate(-50%, -50%) scale(0);
  animation: pulse 1.5s infinite;
}

@keyframes pulse {
  0% { transform: translate(-50%, -50%) scale(0); opacity: 1; }
  100% { transform: translate(-50%, -50%) scale(2); opacity: 0; }
}

.voice-icon {
  margin-bottom: 8rpx;
}

.voice-icon .icon {
  font-size: 80rpx;
  color: #ffffff;
}

.voice-text {
  text-align: center;
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.voice-text .main-text {
  display: block;
  font-size: 28rpx;
  color: #ffffff;
  font-weight: 500;
  margin-bottom: 6rpx;
  line-height: 1.2;
  word-break: break-all;
}

.voice-text .sub-text {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.2;
  word-break: break-all;
}

/* 快捷操作区 (20%屏幕高度) */
.quick-actions-section {
  height: 20vh;
  background: #ffffff;
  padding: 20rpx 30rpx;
}

.quick-actions {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 100%;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.action-item:active {
  transform: scale(0.95);
  background: #f8f9fa;
}

.action-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
  font-size: 40rpx;
}

.photo-icon {
  background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
}

.create-icon {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.sync-icon {
  background: linear-gradient(135deg, #ffc107 0%, #fd7e14 100%);
}

.action-text {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

/* 今日目标区 (25%屏幕高度) */
.today-goals-section {
  height: 25vh;
  background: #ffffff;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.section-more {
  font-size: 28rpx;
  color: #00B4D8;
}

.goals-container {
  height: calc(100% - 60rpx);
  overflow-x: auto;
  white-space: nowrap;
}

.goal-card {
  display: inline-block;
  width: 300rpx;
  height: 100%;
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-right: 20rpx;
  border: 1rpx solid #e9ecef;
  transition: all 0.3s ease;
}

.goal-card:active {
  transform: scale(0.98);
  background: #e9ecef;
}

.goal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.goal-category {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  background: #e3f2fd;
  color: #1976d2;
}

.goal-category.work {
  background: #e8f5e8;
  color: #2e7d32;
}

.goal-category.study {
  background: #fff3e0;
  color: #f57c00;
}

.goal-category.health {
  background: #fce4ec;
  color: #c2185b;
}

.goal-category.life {
  background: #f3e5f5;
  color: #7b1fa2;
}

.goal-status {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.goal-status.in-progress {
  background: #fff3e0;
  color: #f57c00;
}

.goal-status.completed {
  background: #e8f5e8;
  color: #2e7d32;
}

.goal-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  white-space: normal;
  line-height: 1.4;
  height: 80rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.goal-progress {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.progress-bar {
  flex: 1;
  height: 8rpx;
  background: #e9ecef;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #00B4D8 0%, #0077B6 100%);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #666;
  min-width: 60rpx;
  text-align: right;
}

.empty-goals {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  color: #999;
}

.empty-text {
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: #ccc;
}

.login-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 600rpx;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 40rpx;
  text-align: center;
}

.modal-header {
  margin-bottom: 40rpx;
}

.modal-title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.modal-subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
}

.auth-section {
  margin-bottom: 40rpx;
}

.auth-btn.wechat-auth {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #07c160 0%, #00a854 100%);
  border: none;
  border-radius: 44rpx;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 500;
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.3);
}

.auth-btn.wechat-auth:active {
  transform: scale(0.98);
}

.legal-text {
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
}

.legal-text .link {
  color: #00B4D8;
  text-decoration: underline;
}
