/* pages/record-detail/record-detail.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 错误状态 */
.error-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.error-text {
  font-size: 28rpx;
  color: #ff4757;
  margin-bottom: 20rpx;
}

.retry-btn {
  background: #00B4D8;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 10rpx 20rpx;
  font-size: 26rpx;
}

/* 记录详情 */
.record-detail {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

/* 通用section样式 */
.content-section,
.goal-section,
.record-type-section,
.tags-section,
.flags-section,
.attachments-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
  padding-bottom: 10rpx;
}

/* 内容区域 */
.content-text {
  font-size: 30rpx;
  line-height: 1.6;
  color: #333;
  word-break: break-all;
}



/* 关联目标 */
.goal-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid #e9ecef;
  transition: all 0.3s ease;
}

.goal-card:active {
  background: #e3f2fd;
  border-color: #00B4D8;
}

.goal-info {
  flex: 1;
}

.goal-title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  display: block;
  margin-bottom: 5rpx;
}

.goal-category {
  font-size: 24rpx;
  color: #666;
}

.goal-arrow {
  font-size: 32rpx;
  color: #999;
}

/* 记录类型 */
.type-display {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.type-icon {
  font-size: 40rpx;
}

.type-name {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

/* 标签 */
.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.tag {
  background: #e3f2fd;
  color: #00B4D8;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

/* 重要标记 */
.flags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.flag {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.flag.important {
  background: #fff3cd;
  color: #856404;
}

.flag.milestone {
  background: #d4edda;
  color: #155724;
}

.flag.breakthrough {
  background: #f8d7da;
  color: #721c24;
}



/* 附件 */
.attachment-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  margin-bottom: 15rpx;
}

.attachment-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.attachment-info {
  flex: 1;
}

.attachment-name {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 5rpx;
}

.attachment-duration,
.attachment-size {
  font-size: 24rpx;
  color: #666;
}

.play-btn,
.preview-btn {
  background: #00B4D8;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
}



/* 操作按钮 */
.actions-section {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
}

.action-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
}

.edit-btn {
  background: #00B4D8;
  color: white;
}

.delete-btn {
  background: #ff4757;
  color: white;
}

.action-btn:active {
  opacity: 0.8;
}
